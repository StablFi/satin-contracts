            path[1],
            lp.stable(),
            fullInvestment - swapedAmounts[0],
            swapedAmounts[1],
            1,
            1,
            address(this),
            block.timestamp
        );

        _approveTokenIfNeeded(address(lp), address(veSatin));
        if (increase) veSatin.increaseAmount(tokenId, amountLiquidity);
        else veSatin.createLockFor(amountLiquidity, lockTime, msg.sender);

        _returnAssets(path);
    }

    function _swapAndStake(address _inputToken, bytes calldata _swapToken0, bytes calldata _swapToken1, uint256 _locktime, uint256 _tokenId, bool _increase) private {
        address[] memory path = new address[](3);
        path[0] = lp.token0();
        path[1] = lp.token1();
        path[2] = _inputToken;

        if (_inputToken != path[0]) {
            _swapViaFirebird(_inputToken, _swapToken0);
        }

        if (_inputToken != path[1]) {
            _swapViaFirebird(_inputToken, _swapToken1);
        }

        _approveTokenIfNeeded(path[0], address(router));
        _approveTokenIfNeeded(path[1], address(router));
        uint256 lp0Amt = IERC20(path[0]).balanceOf(address(this));
        uint256 lp1Amt = IERC20(path[1]).balanceOf(address(this));

        (uint256 actual0, uint256 actual1, uint256 amountLiquidity) = ISatinRouter(router).addLiquidity(
            path[0],
            path[1],
            lp.stable(),
            lp0Amt,
            lp1Amt,
            1,
            1,
            address(this),
            block.timestamp
        );

        _checkDeviation(lp0Amt, lp1Amt, actual0, actual1);

        _approveTokenIfNeeded(address(lp), address(veSatin));
        if (_increase) veSatin.increaseAmount(_tokenId, amountLiquidity);
        else veSatin.createLockFor(amountLiquidity, _locktime, msg.sender);

        _returnAssets(path);
    }

    function _checkDeviation(uint256 _input0, uint256 _input1, uint256 _actual0, uint256 _actual1) private pure {
        uint256 allowed0 = (_input0 * .99 ether) / 1 ether;
        uint256 allowed1 = (_input1 * .99 ether) / 1 ether;
        require(_actual0 >= allowed0 && _actual1 >= allowed1, "Satin: too much deviation");
    }

    function _returnAssets(address[] memory _tokens) private {
        uint256 balance;
        for (uint256 i; i < _tokens.length; i++) {
            balance = IERC20(_tokens[i]).balanceOf(address(this));
            if (balance > 0) {
                if (_tokens[i] == address(WMATIC)) {
                    WMATIC.withdraw(balance);
                    (bool success, ) = msg.sender.call{value: balance}(new bytes(0));
                    require(success, "Satin: MATIC transfer failed");
                } else {
                    IERC20(_tokens[i]).safeTransfer(msg.sender, balance);
                }
            }
        }
    }

    // our main swap function call. we call the aggregator contract with our fed data. if we get an error we revert and return the error result.
    function _swapViaFirebird(address _inputToken, bytes memory _callData) private {
        _approveTokenIfNeeded(_inputToken, address(firebirdRouter));

        (bool success, bytes memory retData) = firebirdRouter.call(_callData);

        propagateError(success, retData, "Firebird");

        require(success == true, "Satin: calling Firebird got an error");
    }

    function _getSwapAmount(ISatinPair pair, uint256 investmentA, uint256 reserveA, uint256 reserveB, address tokenA) private view returns (uint256 swapAmount) {
        uint256 halfInvestment = investmentA / 2;

        uint256 nominator = pair.getAmountOut(halfInvestment, tokenA);
        uint256 denominator = (halfInvestment * (reserveB - nominator)) / (reserveA + halfInvestment);
        swapAmount = investmentA - (Babylonian.sqrt((halfInvestment * halfInvestment * nominator) / denominator));
    }

    function estimateSwap(address tokenIn, uint256 fullInvestmentIn) public view returns (uint256 swapAmountIn, uint256 swapAmountOut, address swapTokenOut) {
        bool isInputA = lp.token0() == tokenIn;
        require(isInputA || lp.token1() == tokenIn, "Satin: Input token not present in liqudity pair");

        (uint256 reserveA, uint256 reserveB, ) = lp.getReserves();
        (reserveA, reserveB) = isInputA ? (reserveA, reserveB) : (reserveB, reserveA);

        swapTokenOut = isInputA ? lp.token1() : lp.token0();
        swapAmountIn = _getSwapAmount(lp, fullInvestmentIn, reserveA, reserveB, tokenIn);
        swapAmountOut = lp.getAmountOut(swapAmountIn, tokenIn);
    }

    function _approveTokenIfNeeded(address token, address spender) private {
        if (IERC20(token).allowance(address(this), spender) == 0) {
            IERC20(token).safeApprove(spender, type(uint256).max);
        }
    }

    // Error reporting from our call to the aggrator contract when we try to swap.
    function propagateError(bool success, bytes memory data, string memory errorMessage) public pure {
        // Forward error message from call/delegatecall
        if (!success) {
            if (data.length == 0) revert(errorMessage);
            assembly {
                revert(add(32, data), mload(data))
            }
        }
    }

    receive() external payable {
        assert(msg.sender == address(WMATIC));
    }
}
